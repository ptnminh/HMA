{
    "version": "0.2.0",
    "configurations": [



        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/apps",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "name": "gateway",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/gateway"
        },
        {
            "type": "node-terminal",
            "name": "plans",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/plans"
        },
        {
            "type": "node-terminal",
            "name": "auth",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/auth"
        },
        {
            "type": "node-terminal",
            "name": "mail",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/mailer"
        },
        {
            "type": "node-terminal",
            "name": "file",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/files"
        }
    ]
}